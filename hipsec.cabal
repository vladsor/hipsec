name:           hipsec
version:        0.0.0.1
license:        BSD3
license-file:   LICENSE
maintainer:     Vladimir Sorokin <v.d.sorokin@gmail.com>
synopsis:       Low-level networking interface
description:    Low-level networking interface
category:       Network
build-type:     Simple
cabal-version:  >=1.8
homepage:       http://github.com/haskell/network
bug-reports:    http://trac.haskell.org/network/

library
    exposed-modules: Network.Security.Message, Network.Security.PFKey
    build-depends: base >= 4.0.0.0, unix, binary >= 0.5.0.0, 
                   bytestring, socket, network, time, mtl, ioctl, select, hex


Executable setkey
    build-depends: base >= 4.0.0.0, unix, binary >= 0.5.0.0, 
                   bytestring, socket, network, hipsec, time, cmdargs, parsec, ioctl, select, hex

    main-is: src/setkey.hs
    buildable: True

    ghc-options: -fwarn-incomplete-patterns

source-repository head
  type:     git
  location: git://github.com/haskell/network.git
